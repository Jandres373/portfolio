---
interface Props {
  title: string;
  description: string;
  href: string;
}

const { title, description, href } = Astro.props;
---

<li class="link-card">
  <div>
    <slot name="header">header</slot>
    <h2>
      {title}
    </h2>
    <p>{description}</p>

    <u><a href={href}><slot name="base">base</slot></a></u>
  </div>
  <style>
    .link-card {
      list-style: none;
      display: flex;
      background-image: none;
      background-size: 400%;
      border-radius: 7px;
      background-position: 100%;
      transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
      transition-duration: 20ms;
      box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
      padding: 15px;
      border-radius: 25px;
    }
    h2 {
      margin: 0;
      font-size: 1.25rem;
      transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }
    p {
      margin-top: 0.5rem;
      margin-bottom: 0;
    }
    a,
    u {
      font-size: 12px;
      font-weight: bold;
      letter-spacing: 2px;
      color: blue;
    }
  </style>
</li>
